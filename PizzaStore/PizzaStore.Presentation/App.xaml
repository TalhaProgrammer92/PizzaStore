<Application x:Class="PizzaStore.Presentation.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- Material Design base styles -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />

                <!-- Recommended color themes -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepOrange.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Secondary/MaterialDesignColor.Red.xaml" />

            </ResourceDictionary.MergedDictionaries>

            <!-- Global ComboBox (PopUp) Style -->
            <SolidColorBrush x:Key="MaterialDesignPopupBoxBackground" Color="White"/>
            <SolidColorBrush x:Key="MaterialDesignPopupBoxForeground" Color="Black"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
