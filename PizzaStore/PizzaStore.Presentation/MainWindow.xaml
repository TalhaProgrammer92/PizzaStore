<Window x:Class="PizzaStore.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PizzaStore"
        Height="650"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FFF7F3E3">

    <Window.Resources>
        <!-- Navigation Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FFF85C02"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FFEA2027"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">

        <!-- LEFT SIDEBAR -->
        <Border DockPanel.Dock="Left" 
                Width="230" 
                Background="#FFF97F03"
                CornerRadius="0,20,20,0"
                Padding="10,20">
            <StackPanel>

                <!-- APP LOGO / TITLE -->
                <StackPanel Orientation="Horizontal" Margin="10,0,0,20" VerticalAlignment="Center">
                    <!--<Ellipse Width="40" Height="40" Fill="#FFF44336" />-->
                    <Image Source="Assets/Logo/pizza-slice.png" Width="40" Height="40"/>
                    <TextBlock Text="Pizza Store" 
                               Foreground="White"
                               FontSize="24" 
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                </StackPanel>

                <Separator Margin="0,0,0,15"/>

                <!-- NAVIGATION BUTTONS -->
                <StackPanel>
                    <!-- Customer/User Sections -->
                    <RadioButton Content="🏠 Dashboard" Style="{StaticResource NavButtonStyle}" IsChecked="True"/>
                    <RadioButton Content="🍕 Menu" Style="{StaticResource NavButtonStyle}"/>
                    <RadioButton Content="🛒 My Orders" Style="{StaticResource NavButtonStyle}"/>
                    <RadioButton Content="📦 Order History" Style="{StaticResource NavButtonStyle}"/>
                    <RadioButton Content="👤 Profile" Style="{StaticResource NavButtonStyle}"/>

                    <Separator Margin="0,15,0,10"/>

                    <!-- Admin Sections -->
                    <TextBlock Text="Admin Panel" 
                               FontSize="14"
                               Foreground="White"
                               Margin="10,5,0,5"
                               FontWeight="SemiBold"
                               Opacity="0.8"/>
                    <RadioButton Content="📊 Sales Overview" Style="{StaticResource NavButtonStyle}"/>
                    <RadioButton Content="🍳 Manage Pizzas" Style="{StaticResource NavButtonStyle}"/>
                    <RadioButton Content="🧾 Manage Orders" Style="{StaticResource NavButtonStyle}"/>
                    <RadioButton Content="👥 Manage Users" Style="{StaticResource NavButtonStyle}"/>

                    <Separator Margin="0,15,0,10"/>

                    <!-- Logout -->
                    <RadioButton Content="🚪 Logout" Style="{StaticResource NavButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Background="#FFF7F3E3">
            <Border Background="White" CornerRadius="20" Margin="15" Padding="10">
                <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
            </Border>
        </Grid>

    </DockPanel>
</Window>
