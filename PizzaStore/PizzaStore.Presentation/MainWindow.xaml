<Window x:Class="PizzaStore.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PizzaStore" Height="600" Width="1200">
    <DockPanel>
        <!-- Left nav -->
        <StackPanel DockPanel.Dock="Left" Width="220" Background="#FFF97F03">
            <TextBlock Text="Pizza Store" FontSize="26" Margin="10" FontWeight="Bold"/>
            
            <RadioButton Content="Dashboard" Margin="5"/>
            
            <!-- Buttons for Menu, Orders, Admin etc -->
        </StackPanel>

        <!-- Main content area -->
        <Frame x:Name="MainFrame" />
    </DockPanel>
</Window>
